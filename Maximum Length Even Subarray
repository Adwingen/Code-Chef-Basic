#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdlib.h>
#include <math.h>


int main()
{
    
    int testCases;
    int n;
    int i;
    
    
    scanf("%d",&testCases);

    while (testCases--)
    {
        scanf("%d",&n);
        int sum = 0;
        for (i = 1; i <= n; i++)
            sum += i;

        if (sum % 2 == 0)
            printf("%d\n", i-1);
        else
            printf("%d\n", i - 2);
        
    }

    return 0;
}
