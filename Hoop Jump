#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int testCases;

    int numberOfHoop;
    
    scanf("%d", &testCases);
    while (testCases--)
    {
        scanf("%d", &numberOfHoop);
        if (numberOfHoop %2 == 0)
        {
            printf("%d\n", numberOfHoop/2);
        }
        else if (numberOfHoop %2 == 1)
        {
            printf("%d\n",(numberOfHoop+1)/2);
        }


    }
    
    return 0;
}

