#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdlib.h>
#include <math.h>


int main()
{
    
    int testCases;
    int l,r;
    int sumResultDistint;
   
    
    
    
    scanf("%d",&testCases);

    while (testCases--)
    {
        scanf("%d %d",&l,&r);
        if (l != r)
            sumResultDistint = ((2 * r) - (2 * l)) + 1;
        else
            sumResultDistint = 1;
   
        printf("%d\n", sumResultDistint);

    }

    return 0;
}
