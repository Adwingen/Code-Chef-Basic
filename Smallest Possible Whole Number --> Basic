#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdlib.h>


int main()
{
    
    int testCases;
    int n, k;
 
    
    scanf("%d",&testCases);

  
    while (testCases--)
    {
        scanf("%d %d", &n, &k);
       
        if(k==0)
            printf("%d \n", n);
        else
            printf("%d \n", n%k);
        
    }

    return 0;
}
